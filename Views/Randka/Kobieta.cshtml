@model AplikacjaRandkowa.Models.WizardViewModel

@{
	ViewData["Title"] = "Kobieta";
}

<h1>Krok 1. Dane kobiety</h1>

<h4>Podaj dane kobiety, by sprawdzić, czy pasuje do niej mężczyzna</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Krok1Post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Kobieta.Imie" class="control-label"></label>
				<input asp-for="Kobieta.Imie" class="form-control" />
				<span asp-validation-for="Kobieta.Imie" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Kobieta.Nazwisko" class="control-label"></label>
				<input asp-for="Kobieta.Nazwisko" class="form-control" />
				<span asp-validation-for="Kobieta.Nazwisko" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Kobieta.DataUrodzenia" class="control-label"></label>
				<input asp-for="Kobieta.DataUrodzenia" class="form-control" />
				<span asp-validation-for="Kobieta.DataUrodzenia" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Kobieta.KolorOczu" class="control-label"></label>
				<select asp-for="Kobieta.KolorOczu" asp-items="Html.GetEnumSelectList<KolorOczuEnum>()" class="form-control">
					<option selected="selected" value="">Wybierz kolor...</option>
				</select>
				<span asp-validation-for="Kobieta.KolorOczu" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Dalej" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
